{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": true,

    "types": ["node"],
    "lib": ["ES2022"],

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}